rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /music/{song} {
    	allow read;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null;
    }
    match /likes/{liked} {
      allow read;
      allow update: if request.auth != null;
      allow create: if request.auth != null;
      allow delete;
      
    }
  }
}